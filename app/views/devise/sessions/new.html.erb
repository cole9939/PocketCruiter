<div class="row">
  <div class="outer-div">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2>Log in and get to work</h2>
      <div class="form-group">
        <label>Email</label>
        <%= f.email_field :email, autofocus: true, class: "form-control",placeholder: "Email"  %>
      </div>
      <div class="form-group">
        <label>password</label>
        <%= f.password_field :password, autofocus: true, class: "form-control",placeholder: "Password"  %>
      </div>
      <div class="form-group">
        <div class="row">
          <div  class="col-md-3 col-xs-4">
              <%= f.submit "Sign in", class: "btn btn-success" %>
          </div>
          <div  class="col-md-6 col-xs-8">
            <div class="checkbox">
              <label>
                <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me %> Remember me
                <% end -%>
              </label>
            </div>
          </div>
        </div>
      </div>
      <div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot password?", new_password_path(resource_name) %><br />
        <% end -%>
      </div></br>
      <div>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
         Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %><br />
        <% end -%>
      </div>
    <% end %>
  </div>
</div>

